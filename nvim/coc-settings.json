{
	// Plugins

	// Swift
	"sourcekit.trace.server": "verbose",
	"sourcekit.enable": true,
	"sourcekit.args": [
		"--log-level",
		"info",
		"-Xswiftc",
		"-Xfrontend",
		"-Xswiftc",
		"-validate-tbd-against-ir=none"
	],

	// Clangd
	"clangd.semanticHighlighting": true,
	"clangd.enabled": false,

	// Python
	"python.linting.pylintEnabled": false,
	"python.linting.mypyEnabled": true,
	"python.linting.enabled": true,

	// Lua
	"Lua.hint.enable": true,
	"Lua.telemetry.enable": false,
	"Lua.completion.callSnippet": "Both",
	"Lua.color.mode": "SemanticEnhanced",

	"coc.preferences.jumpCommand": "edit",
	"coc.preferences.semanticTokensHighlights": true,
	"coc.preferences.colorSupport": true,

	"diagnostic.refreshOnInsertMode": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": true,

	"codeLens.enable": true,
	"codeLens.separator": "‣",
	"codeLens.subseparator": " | ",
	"list.indicator": "➤",

	"suggest.enablePreview": true,
	"suggest.removeDuplicateItems": true,
	"suggest.detailField": "preview",
	"suggest.detailMaxLength": 100,

	"suggest.floatConfig": { "border": true },
	"diagnostic.floatConfig": { "border": true },
	"hover.floatConfig": { "border": true },

	"suggest.completionItemKindLabels": {
		"text": "",
		"method": "",
		"function": "",
		"field": "ﰠ",
		"variable": "",
		"class": "ﴯ",
		"interface": "",
		"module": "",
		"property": "ﰠ",
		"unit": "塞",
		"value": "",
		"enum": "",
		"enumMember": "",
		"keyword": "",
		"snippet": "",
		"color": "",
		"file": "",
		"folder": "",
		"reference": "",
		"constant": "",
		"struct": "פּ",
		"event": "",
		"operator": "",
		"typeParameter": "\uf728",
		"default": ""
	},

	"python.autoComplete.extraPaths": [
		"${env:SPARK_HOME}/python",
		"${env:SPARK_HOME}/python/pyspark"
	],

	"cSpell.userWords": [
		"CTOML",
		"Denite",
		"Neovim",

{
	// Plugins

	// Swift
	"sourcekit.trace.server": "verbose",
	"sourcekit.env": { "TOOLCHAINS": "swift" },
	"sourcekit.args": ["--log-level", "info"],

	// Python
	"python.linting.pylintEnabled": false,
	"python.linting.mypyEnabled": true,
	"python.linting.enabled": true,

	// Lua
	"Lua.hint.enable": true,
	"Lua.telemetry.enable": false,
	"Lua.completion.callSnippet": "Both",
	"Lua.color.mode": "Semantic",
	"Lua.workspace.library": ["~/.local/share/nvim/site/pack/packer/start/"],

	// TOML
	"toml.semanticTokens": true,

	// Rust

	"rust-analyzer.inlayHints.enable": true,
	"rust-analyzer.inlayHints.maxLength": null,
	"rust-analyzer.inlayHints.renderColons": true,

	"coc.preferences.jumpCommand": "edit",
	"coc.preferences.maxFileSize": "1GB",

	//"coc.preferences.formatOnSaveFiletypes": ["*"],
	"coc.preferences.extensionUpdateCheck": "daily",
	"coc.preferences.enableMessageDialog": true,
	"coc.preferences.excludeImageLinksInMarkdownDocument": false,
	"coc.preferences.silentAutoupdate": false,

	"notification.statusLineProgress": false,

	"inlayHint.refreshOnInsertMode": true,

	"semanticTokens.enable": true,

	"list.indicator": "➤",

	"diagnostic.errorSign": "",
	"diagnostic.infoSign": "",
	"diagnostic.hintSign": "",
	"diagnostic.warningSign": "",

	"diagnostic.refreshOnInsertMode": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": true,
	"diagnostic.floatConfig": { "border": true, "shadow": true },

	"codeLens.enable": true,
	"codeLens.separator": "‣",
	"codeLens.subseparator": " | ",

	"outline.autoWidth": true,
	"outline.followCursor": true,
	"outline.autoPreview": true,
	"outline.showLineNumber": true,
	"outline.detailAsDescription": true,
	"outline.previewBorderRounded": true,

	"suggest.virtualText": false,
	"suggest.reversePumAboveCursor": true,
	"suggest.pumFloatConfig": {
		"border": true,
		//"shadow": true,
		"rounded": true
	},
	"suggest.removeDuplicateItems": true,
	"suggest.detailField": "preview",
	"suggest.labelMaxLength": 300,

	"hover.floatConfig": { "border": true, "shadow": true },
	"signature.floatConfig": { "border": true, "shadow": true },

	"suggest.completionItemKindLabels": {
		"text": "",
		"method": "",
		"function": "",
		"field": "ﰠ",
		"variable": "",
		"class": "ﴯ",
		"interface": "",
		"module": "",
		"property": "ﰠ",
		"unit": "塞",
		"value": "",
		"enum": "",
		"enumMember": "",
		"keyword": "",
		"snippet": "",
		"color": "",
		"file": "",
		"folder": "",
		"reference": "",
		"constant": "",
		"struct": "פּ",
		"event": "",
		"operator": "",
		"typeParameter": "\uf728",
		"default": ""
	},


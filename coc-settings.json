{
	"languageserver": {
		"sourcekit-lsp": {
			"command": "sourcekit-lsp",
			"args": [],
			//"filetypes": ["c", "cpp", "swift", "objc", "objcpp"],
			"filetypes": [],
			"trace.server": "verbose",
			"initializationOptions": {},
			"settings": {}
		}
	},

	"git.addGBlameToVirtualText": true,
	"git.enableGutters": false,
	"git.virtualTextPrefix": "  git: ",

	"coc.preferences.jumpCommand": "tabe",
	"coc.preferences.semanticTokensHighlights": true,
	"coc.preferences.colorSupport": true,
	
	"diagnostic.refreshOnInsertMode": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": true,

	"codeLens.enable": true,
	"codeLens.separator": "‣",
	"codeLens.subseparator": " | ",
	"list.indicator": "➤",

	"clangd.semanticHighlighting": true,
	"clangd.enabled": true,

	"python.linting.pylintEnabled": false,
	"python.linting.mypyEnabled": true,
	"python.linting.enabled": true,

	"explorer.icon.enableNerdfont": true,
	"explorer.datetime.format": "eee, MMM yyyy, h:mm:ss a",
	"explorer.file.column.indent.indentLine": true,

	"explorer.keyMappings": {
		"i": false, // cancel default mapkey

		"gk": "expandablePrev",
		"gj": "expandableNext",

		"*": "toggleSelection",
		"<tab>": "actionMenu",

		"h": "collapse",
		"l": ["expandable?", "expand", "open"],
		"J": ["toggleSelection", "nodeNext"],
		"K": ["toggleSelection", "nodePrev"],
		"gl": "expandRecursive",
		"gh": "collapseRecursive",
		"<2-LeftMouse>": [
			"expandable?",
			["expanded?", "collapse", "expand"],
			"open"
		],
		"o": ["expanded?", "collapse", "expand"],
		"<cr>": ["expandable?", "cd", "open"],
		"e": "open",
		"s": "open:split",
		"S": "open:split:plain",
		"E": "open:vsplit",
		"t": "open:tab",
		"<bs>": "gotoParent",
		"gp": "preview:labeling",

		"y": "copyFilepath",
		"Y": "copyFilename",
		"c": "copyFile",
		"x": "cutFile",
		"p": "pasteFile",
		"d": "delete",
		"D": "deleteForever",

		"a": "addFile",
		"A": "addDirectory",
		"r": "rename",

		".": "toggleHidden",
		"R": "refresh",

		"?": "help",
		"q": "quit",
		"<esc>": "esc",
		"X": "systemExecute",
		"gd": "listDrive",

		"f": "search",
		"F": "searchRecursive",

		"gf": "gotoSource:file",
		"gb": "gotoSource:buffer",

		"[[": "sourcePrev",
		"]]": "sourceNext",

		"[d": "diagnosticPrev",
		"]d": "diagnosticNext",

		"[c": "gitPrev",
		"]c": "gitNext",
		"<<": "gitStage",
		">>": "gitUnstage"
	},
	"python.autoComplete.extraPaths": [
		"${env:SPARK_HOME}/python",
		"${env:SPARK_HOME}/python/pyspark"
	],
	"cSpell.userWords": [
		"CTOML",
		"Denite",
		"Nerdfont",
		"SYMDEF",
		"Semshi",
		"Tcolorscheme",
		"Unstage",
		"Valloric",
		"Yggdroot",
		"ccls",
		"clangd",
		"cohama",
		"cquery",
		"datetime",
		"elzr",
		"expl",
		"funcobj",
		"jackguo",
		"kkvh",
		"kristijanhusak",
		"lexima",
		"liuchengxu",
		"lldb",
		"mapkey",
		"mygroup",
		"mypy",
		"neoclide",
		"nofile",
		"nord",
		"numirias",
		"objc",
		"objcpp",
		"pgsql",
		"pylint",
		"pyspark",
		"require'nvim",
		"sourcekit",
		"startify",
		"struct",
		"subseparator",
		"tabe",
		"tomasiser",
		"tpope",
		"ujihisa",
		"vsplit",
		"wfxr"
	]
}
